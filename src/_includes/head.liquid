  <!-- page title -->
  <title>{{title}}{% unless title == "Paloma Kop" %} ♦ Paloma Kop {% endunless %}</title>

  <link rel="icon" type="image/x-icon" sizes="any" href="https://s3.amazonaws.com/palomakop.tv/favicon.ico">
  <link rel="icon" type="image/svg+xml" href="https://s3.amazonaws.com/palomakop.tv/favicon.svg">
  <link rel="alternate" type="application/rss+xml"
  title="Paloma Kop ♦ RSS Feed"
  href="/rss.xml" />
  <link href="/css/style.css" rel="stylesheet">

  {% if dark %}
  <link href="/css/dark.css" rel="stylesheet">
  {% endif %}

  <link href="https://merveilles.town/@palomakop" rel="me">

  {% if customStyleSheet %}
  <link href="/css/{{customStyleSheet}}.css" rel="stylesheet">
  {% endif %}

  {% if customStyle %}
  <!-- css -->
  <style>
  {{ customStyle }}
  </style>
  {% endif %}

  {% if bgImage %}
  <style>
  :root {
    --main-bg-gradient:none;
    --main-bg-color:#000000;
  }
  .bg {
    background-image:url('{{bgImage}}');
    {% if bgImageOpacity %}opacity:{{bgImageOpacity}};{% endif %}
  }
  </style>
  {% endif %}


  <!-- opengraph tags -->
  <meta property="og:description" content="{{description}}">
  <meta property="og:image" content="{% imageUrl thumbnail 1200 %}">

  {% if lightbox %}
  <!-- simple lightbox -->
  <link href="/css/slb.css" rel="stylesheet">
  <script src="/js/slb.js"></script>
  {% endif %}

   {% if musicPlayer %}
  <!-- music player -->
  <link href="/css/musicplayer.css" rel="stylesheet">
  <script src="/js/musicplayer.js"></script>
  {% endif %}

