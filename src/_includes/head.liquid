  {% endif %}

  {% if bgImage %}
  <style>
  :root {
    --main-bg-gradient:none;
    --main-bg-color:#000000;
  }
  .bg {
    background-image:url('{{bgImage}}');
    {% if bgImageOpacity %}opacity:{{bgImageOpacity}};{% endif %}
  }
  </style>
  {% endif %}

  {% if runicon %}
  <style type="text/css">
    @font-face {
      font-family:'RuniconCypher';
      src:url('https://s3.us-east-1.amazonaws.com/palomakop.tv/fonts/runicon_cypher.woff2') format('woff2'), url('https://s3.us-east-1.amazonaws.com/palomakop.tv/fonts/runicon_cypher.woff') format('woff');
      font-display:block;
    }
  </style>
  {% endif %}


  <!-- opengraph tags -->
  <meta property="og:description" content="{{description}}">
  <meta property="og:image" content="https://palomakop.tv{% imageUrl thumbnail 1200 %}">

