    {% include 'upcoming.liquid' %}

    {{content}}

    <h3>Recent Updates</h3>
    <ul class="updates">
      {% for update in collections.allUpdates limit:5 %}
        <li>{{ update.message | markdownLinks }}<br>
          {% if update.image %}
            {% if update.linkUrl %}<a href="{{ update.linkUrl }}">{% endif %}
            {% image update.image, "", 400, "" %}
            {% if update.linkUrl %}</a>{% endif %}
